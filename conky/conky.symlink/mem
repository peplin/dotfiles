# Create own window instead of using desktop_mem (required in nautilus)
background yes
use_xft yes
xftfont Ubuntu:size=9
xftalpha 1
update_interval 2.0

own_window yes
own_window_transparent yes
own_window_type normal
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager

# Use double buffering (reduces flicker, may not work for everyone)
double_buffer yes

# fiddle with window
#use_spacer right

# Minimum size of text area
minimum_size 400 5
maximum_width 300

draw_shades no
draw_outline no
draw_borders no
uppercase no

# Default colors
default_color white
default_shade_color red
default_outline_color 97b767

# Text alignment
alignment bottom_right

# Gap between borders of screen and text
gap_x 340
gap_y 30

maximum_width 300

short_units yes
pad_percents 2
top_name_width 20

# Subtract file system buffers from used memory?
no_buffers yes

# number of cpu samples to average
# set to 1 to disable averaging
cpu_avg_samples 2

# stuff after 'TEXT' will be formatted on screen
TEXT
RAM: $mem / $memmax ($memperc%)${alignr}${membar 5,100}$color
Swap: $swap / $swapmax ($swapperc%)${alignr}${swapbar 5,100}$color

Name${goto 170}CPU${goto 250}MEM${color}
${top_mem name 1}${goto 150}${top_mem cpu 1}${goto 230}${top_mem mem 1}
${top_mem name 2}${goto 150}${top_mem cpu 2}${goto 230}${top_mem mem 2}
${top_mem name 3}${goto 150}${top_mem cpu 3}${goto 230}${top_mem mem 3}
${top_mem name 4}${goto 150}${top_mem cpu 4}${goto 230}${top_mem mem 4}

${color 97b767}MEMORY 	${hr 2}$color
